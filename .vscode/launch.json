  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js",
      "args": ["--exec", "'ts-node'", "${workspaceFolder}/src/index.ts" ],
      // "program": "nodemon --inspect --exec 'ts-node' ./src/index.ts",
      // "restart": true,
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    }
  ]
}